<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.savepreciouswildlife">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_owl"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_owl_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApp">

        <activity android:name=".activities.PaymentDetailsActivity" />
        <activity android:name=".activities.DonateSumActivity" />


        <activity
            android:name=".activities.NavigatorActivity"
            android:screenOrientation="portrait"
            android:noHistory="true">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.BeFamiliarBirdDetailsActivity" android:screenOrientation="portrait" />
        <activity android:name=".activities.LoginActivity" android:screenOrientation="portrait" />
        <activity android:name=".activities.RegistrationActivity" android:screenOrientation="portrait"/>
        <activity android:name=".activities.VolunteerDetailsActivity" android:screenOrientation="portrait" />
        <activity android:name=".MainActivity" android:screenOrientation="portrait" />
    </application>

</manifest>