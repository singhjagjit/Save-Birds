<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgViewBird"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_margin="4dp"
        android:layout_weight="0.3"
        android:adjustViewBounds="true"
        android:contentDescription="@string/descImgViewBird" />

    <LinearLayout
        android:layout_width="140dp"
        android:layout_height="90dp"
        android:layout_margin="4dp"
        android:layout_weight="0.4"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:background="#FFFFFF"
                android:gravity="center"
                android:text="N"
                android:textColor="#036807"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:background="@color/mint_green_light"
                android:gravity="center"
                android:text="P"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:background="@color/mint_green_dark"
                android:gravity="center"
                android:text="C"
                android:textColor="@color/white_fff"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="90dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtViewBirdName"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:paddingLeft="6dp" />

            <TextView
                android:id="@+id/txtViewBirdProvince"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:paddingLeft="6dp" />

            <TextView
                android:id="@+id/txtViewBirdCity"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:paddingLeft="6dp" />

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btnViewDetail"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:layout_margin="4dp"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="0dp"
        android:text="@string/btnViewDetail"
        android:textSize="12sp"
        app:backgroundTint="@color/resultBtnColor"
        app:elevation="0dp"
        app:iconPadding="0dp" />

</LinearLayout>